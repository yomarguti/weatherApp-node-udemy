<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Weather</title>
  </head>
  <body>
    <div id="main-content">
      {{>header}}
      <p>Use this site to get your weather!</p>

      <form>
        <input id="location-input" type="text" placeholder="Location">
        <button id="search-button">Search</button>
      </form>
      <div id="content-loaders">
        {{>loader}}
      </div>
      <div id="error-message"></div>
      <div class="weather-container">
        <div class="forecast-container">
          <h3 id="forecast-city"></h3>
          <div class="forecast-container__descriptions">
            <img id="forecast-image" alt="weather descriptions">
            <div class="forecast-container__temperature">
              <p id="temperature"></p>
              <span>Â°C</span>
            </div>
          </div>
          <ul>
            <li id="precipitation"></li>
            <li id="humidity"></li>
            <li id="wind"></li>
          </ul>
        </div>
        <div class="city-container">
          <img id="city-image" alt="city image">
        </div>
      </div>
    </div>
    {{>footer}}
    <script src="/js/app.js"></script>
  </body>
</html>